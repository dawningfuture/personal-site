{
    "name": "personal-site",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/**"
    ],
    "scripts": {
        "commit": "cz"
    },
    "devDependencies": {
        "commitizen": "^4.2.3",
        "cz-customizable": "^6.3.0",
        "husky": "^4.0.0"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    }
}